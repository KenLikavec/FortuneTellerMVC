@model IEnumerable<Fortune_Teller_MVC.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@*Sub-Headings*@
<table class="table">
    <tr>
        <th>
            <p>First Name</p>
        </th>
        <th>
            <p>Last Name</p>
        </th>
        <th>
            <p>Age<p>
        </th>
        <th>
            <p>Birth Month</p>
        </th>
        <th>
            <p>Favorite Color</p>
        </th>
        <th>
            <p>Number of Siblings</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthMonth.BirthMonthName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FavoriteColor.FavoriteColorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfSibling.NumOfSibs)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CustomerID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CustomerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CustomerID })
        </td>
    </tr>
}

</table>
